generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String    @id
  username     String    @unique
  githubId     Int?      @unique
  auth_session Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  fresh     Boolean
  user      User     @relation(references: [ id ], fields: [ userId ], onDelete: Cascade)

  @@index([ userId ])
}
