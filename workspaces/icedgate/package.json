{
  "name": "icedgate",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Jumpei Ogawa",
    "url": "https://phanective.org"
  },
  "contributors": [
    {
      "name": "pilcrowOnPaper",
      "url": "https://github.com/pilcrowonpaper"
    },
    {
      "name": "SortedCoding (Chetan Raut)",
      "url": "https://github.com/SortedCoding"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    }
  },
  "scripts": {
    "dev": "pnpm run build:db && tsup --watch",
    "build": "pnpm run build:db && tsup",
    "build:db": "drizzle-kit generate && drizzle-kit migrate",
    "test": "pnpm run build:db && tsx tests/mysql.ts && tsx tests/postgresql.ts && tsx tests/sqlite.ts && vitest run",
    "prepare": "tsx ./scripts/prepare.ts"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "arctic": "^2.0.0",
    "drizzle-orm": "^0.38.3"
  },
  "peerDependencies": {
    "@libsql/client": "^0.14.0",
    "better-sqlite3": "^11.7.2",
    "drizzle-kit": "^0.30.1",
    "hono": "^4.1.5",
    "mysql2": "^3.2.3",
    "pg": "^8.8.0"
  },
  "peerDependenciesMeta": {
    "@libsql/client": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "drizzle-kit": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@libsql/client": "^0.14.0",
    "@phanect/configs": "latest",
    "@types/node": "^22.8.6",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.30.1",
    "hono": "^4.1.5",
    "mysql2": "^3.2.3",
    "pg": "^8.8.0",
    "tsup": "^8.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": "20.x || >=22.x",
    "npm": ">=9.x",
    "pnpm": ">=9.x"
  }
}
