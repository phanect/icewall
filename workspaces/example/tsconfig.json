{
  "extends": "@phanect/configs/ts",
  "compilerOptions": {
    "jsxImportSource": "hono/jsx",
    "lib": [ "esnext" ],
    "types": [
      "@cloudflare/workers-types",
      "@types/node"
    ],
    "pretty": true,
    "noErrorTruncation": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
